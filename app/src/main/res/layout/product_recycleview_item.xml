<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@android:color/white"
    android:padding="@dimen/padding_8">

    <ImageView
        android:id="@+id/id_imv_product_icon"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@mipmap/iamgetest01" />

    <TextView
        android:id="@+id/id_tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="爆款Mk9910迷你版出货原版双层十字纹高端大气上档次，色组合，尺寸25*21*11实物美爆了编码：41030056"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textSize="@dimen/textsize_12"
                android:textColor="@color/gray" />
            <TextView
                android:id="@+id/id_tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 260"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_12"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_imv_fav_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="@string/original_price"
                android:textSize="@dimen/textsize_12"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/id_tv_product_origin_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_8"
                android:text="260"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>